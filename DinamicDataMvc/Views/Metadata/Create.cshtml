@model DinamicDataMvc.Models.MetadataModel
@{
    ViewData["Title"] = "Create";
    var CurrentDate = DateTime.Now.Date.ToString().Substring(0, 10);

    //Display an alert message if the Process Name already exists in the database;
    if (TempData["AlertMessage"] != null)
    {
        <script type="text/javascript">
                window.alert(@Html.Raw(Json.Serialize(TempData["AlertMessage"])));
        </script>
    }
}
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script src="~/js/site.js"></script>
</head>
<body style="background-color:ghostwhite">
    <hr />
    <div class="container" style="text-align:right; background-color:#FF8C00; color:white;">
        <h1>Create New Process</h1>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("CreateProcess", "Metadata", FormMethod.Post))
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"><b>Process Name</b></label>
                    <input asp-for="Name" class="form-control" type="text" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Version" class="control-label"><b>Process Version</b></label>
                    <input asp-for="Version" class="form-control" type="text" readonly value="0" />
                    <span asp-validation-for="Version" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Branch" class="control-label"><b>Branch</b></label>
                    <div class="row">
                        <div class="columns" style="padding-left:25px;">
                            <label><b><i>Development</i></b></label>
                            <input type="checkbox" class="form-control" name="branch" value="Dev" checked />
                        </div>
                        <div class="columns" style="padding-left:25px;">
                            <label><b><i>Quality</i></b></label>
                            <input type="checkbox" class="form-control" name="branch" value="Qa" />
                        </div>
                        <div class="columns" style="padding-left:25px;">
                            <label><b><i>Production</i></b></label>
                            <input type="checkbox" class="form-control" name="branch" value="Prod" />
                        </div>
                    </div>
                    <span asp-validation-for="Branch" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label"><b>Creation Date</b></label>
                    <input asp-for="Date" class="form-control" type="text" value="@CurrentDate" readonly size="10" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="State" class="control-label"><b>Current State</b></label>
                    <input asp-for="State" class="form-control" type="text" readonly="readonly" value="Inactive" size="10" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="reset" value="Clear Web Form" class="btn btn-danger btn-sm btn-block" />
                    <input type="submit" value="Add Fields" class="btn btn-success btn-sm btn-block" />
                </div>
            }
        </div>
    </div>
    <hr />
    <div class="container" style="text-align:right; background-color:#FF8C00; color:white;">
        @using (Html.BeginForm("Read", "Metadata", FormMethod.Get))
        {
            <button type="submit"><i class="fa fa-close"></i>Cancel</button>
        }
    </div>
</body>

