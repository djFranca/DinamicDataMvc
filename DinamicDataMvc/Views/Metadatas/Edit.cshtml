@model DinamicDataMvc.Models.Metadata

@{
    ViewData["Title"] = "Edit";
    var input_size = 35;
}

<div class="text-body">
    <h4>Metadata - @Html.DisplayFor(model => model.Name)</h4>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("UpdateMetadaById", "Metadatas", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Id)
                @Html.TextBoxFor(model => model.Id, new { @readonly = "readonly", @size = input_size, @backcolor = "lightgrey"})
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, new { @size = input_size })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Version)
                @Html.TextBoxFor(model => model.Version, new { @readonly = "readonly", @size = input_size })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Date)
                @Html.TextBoxFor(model => model.Date, new { @readonly = "readonly", @size = input_size })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Branches)
                @foreach (var item in Model.Branches)
                {
                    @Html.TextBoxFor(modelItem => item, new { @size = input_size })
                }
            </div>
            <div class="form-group">
                @Html.ActionLink("Update", "Update", new { ID = Model.Id })
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

